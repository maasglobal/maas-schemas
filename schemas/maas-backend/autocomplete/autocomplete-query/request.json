{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/autocomplete/autocomplete-query/request",
  "description": "Request schema for autocomplete",
  "type": "object",
  "properties": {
    "identityId": {
      "$ref": "../../../core/components/units.json#/definitions/identityId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "../../../core/components/address.json#/definitions/placeName"
        },
        "lat": {
          "$ref": "../../../core/components/units_geo.json#/definitions/relaxedLatitude"
        },
        "lon": {
          "$ref": "../../../core/components/units_geo.json#/definitions/relaxedLongitude"
        },
        "count": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 5
        },
        "radius": {
          "$ref": "../../../core/components/units_geo.json#/definitions/distance",
          "default": 5000
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "headers": {
      "$ref": "../../../core/components/api-common.json#/definitions/headers"
    }
  }
}
