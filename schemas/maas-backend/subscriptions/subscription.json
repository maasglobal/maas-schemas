{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/subscriptions/subscription",
  "description": "MaaS subscription schema",
  "definitions": {
    "newSubscription": {
      "$ref": "#/definitions/subscriptionBase",
      "required": [ "plan" ],
      "additionalProperties": false
    },
    "subscriptionUpdate": {
      "$ref": "#/definitions/subscriptionBase",
      "additionalProperties": false
    },
    "subscriptionResponse": {
      "$ref": "#/definitions/subscriptionBase",
      "required": [ "plan", "terms" ],
      "additionalProperties": false
    },
    "subscriptionBase": {
      "type": "object",
      "properties": {
        "plan": {
          "$ref": "#/definitions/plan"
        },
        "addons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/addon"
          }
        },
        "coupons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/coupon"
          }
        },
        "terms": {
          "$ref": "#/definitions/terms"
        }
      },
      "additionalProperties": true
    },
    "plan": {
      "description": "Customer subscription plan",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/subscriptionItemId"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "price": {
          "$ref": "#/definitions/price"
        }
      },
      "required": ["id"],
      "additionalProperties": true
    },
    "addon": {
      "description": "Customer subscription add-ons",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/subscriptionItemId"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "quantity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100000
        },
        "unitPrice": {
          "$ref": "#/definitions/price"
        }
      },
      "required": ["id", "quantity"],
      "additionalProperties": true
    },
    "coupon": {
      "description": "Additional coupon that may provide discounts",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/subscriptionItemId"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id"]
    },
    "subscriptionItemId": {
      "description": "Identifier for matching the plans (Chargebee compat.)",
      "type": "string",
      "pattern": "^[^\\s\\/]{1,50}$"
    },
    "price": {
      "$ref": "../../core/units.json#/definitions/cost"
    },
    "terms": {
      "description": "Terms related to this subscription",
      "type": "object",
      "properties": {
        "activated": {
          "$ref": "../../core/units.json#/definitions/time"
        },
        "modified": {
          "$ref": "../../core/units.json#/definitions/time"
        },
        "validity": {
          "description": "Subscription validity conditions",
          "type": "object",
          "properties": {
            "startTime": { "$ref": "../../core/units.json#/definitions/time" },
            "endTime": { "$ref": "../../core/units.json#/definitions/time" }
          },
          "required": ["startTime", "endTime"]
        }
      },
      "required": ["activated", "modified", "validity"]
    }
  }
}
