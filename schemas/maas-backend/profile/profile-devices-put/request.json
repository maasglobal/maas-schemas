{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/profile/profile-devices-put/request",
  "description": "Request schema for profile-active-plan-put",
  "type": "object",
  "properties": {
    "identityId": {
      "$ref": "../../../core/aws-units.json#/definitions/identityId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "devicePushToken": {
          "description": "Push token - 32 chars in iOS, up to 255 in Android",
          "type": "string",
          "pattern": "^.{32,255}$"
        },
        "deviceIdentifier": {
          "$ref": "../../../core/units.json#/definitions/uuid"
        },
        "deviceType": {
          "type": "string",
          "enum": ["iOS", "Android"]

        }
      },
      "required": ["devicePushToken", "deviceIdentifier", "deviceType"],
      "additionalProperties": false
    },
    "headers": {
      "Accept": {
        "$ref": "../../api-common.json#/definitions/acceptHeader"
      },
      "X-Whim-User-Agent": {
        "$ref": "../../api-common.json#/definitions/userAgentHeader"
      }
    }
  },
  "additionalProperties": false
}
