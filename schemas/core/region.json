{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/regions/region",
  "description": "MaaS region schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "countryCode": {
      "$ref": "./components/address.json#/definitions/country"
    },
    "zipCode": {
      "$ref": "./components/address.json#/definitions/zipCode"
    },
    "availability": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [ "id", "countryCode", "zipCode" ],
  "additionalProperties": true
}
