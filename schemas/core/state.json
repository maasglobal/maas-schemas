{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/v1/state",
  "description": "MaaS schema for defining states",
  "definitions": {
    "bookingState": {
      "description": "The life-cycle state of the booking",
      "type": "string",
      "enum": [
        "START",
        "PENDING",
        "PAID",
        "RESERVED",
        "CONFIRMED",
        "ACTIVATED",
        "CANCELLED",
        "CANCELLED_WITH_ERRORS",
        "EXPIRED",
        "RECONCILING",
        "RESOLVED",
        "REJECTED"
      ]
    },
    "legState": {
      "type": "string",
      "enum": [
        "START",
        "PLANNED",
        "PAID",
        "ACTIVATED",
        "CANCELLED",
        "CANCELLED_WITH_ERRORS",
        "FINISHED"
      ]
    },
    "itineraryState": {
      "type": "string",
      "enum": [
        "START",
        "PLANNED",
        "PAID",
        "ACTIVATED",
        "CANCELLED",
        "CANCELLED_WITH_ERRORS",
        "FINISHED"
      ]
    }
  }
}
