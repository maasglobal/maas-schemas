{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/geolocation",
  "description": "Partial (Points only) GeoJSON Schema",
  "definitions": {
    "featureCollection": {
      "properties": {
        "type": { "enum": [ "FeatureCollection" ] },
        "features": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/feature"
          }
        }
      },
      "required": [ "type", "features" ]
    },
    "feature": {
      "properties": {
        "type": { "enum": [ "Feature" ] },
        "geometry": {
          "$ref": "#/definitions/geometry"
        },
        "properties": {
          "$ref": "#/definitions/properties"
        }
      },
      "additionalProperties": false,
      "required": [ "type", "geometry", "properties"]
    },
    "geometry": {
      "type": "object",
      "properties": {
        "type": { "enum": [ "Point" ] },
        "coordinates": {
          "$ref": "./units_geo.json#/definitions/shortLocation"
        }
      },
      "additionalProperties": false,
      "required": [ "type", "coordinates" ]
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "streetNumber": {
          "type": "string",
          "minLength": 1,
          "maxLength": 16
        },
        "streetName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "city": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "country": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "countryCode": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "houseNumber": {
          "type": "integer",
          "minLength": 1,
          "maxLength": 16
        },
        "zipcode": { "type": "integer" }
      },
      "required": [ "name" ]
    }
  }
}
