{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "MaaS common units that are used consistently within our own objects",
  "type": "object",
  "properties": {
    "amount": {
      "anyOf": [
        {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        {
          "type": "null"
        }
      ]
    },
    "discount": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    },
    "taxes": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    },
    "currency": {
      "anyOf": [
        {
          "$ref": "./units.json#/definitions/actualCurrency"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": ["amount", "currency"],
  "additionalProperties": false
}
