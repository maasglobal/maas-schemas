        "customer[ssid]": {
          "description": "Social Security ID",
          "$ref": "http://maasglobal.com/core/components/common.json#/definitions/ssid"
        },
        "customer[subscriberType]": {
          "description": "Can indicate if subscriber is using paid or free plan",
          "type": "string",
          "minLength": 3,
          "maxLength": 255
        }
