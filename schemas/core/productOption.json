{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/itinerary",
  "description": "Product option for an itinerary, is either an existing booking pointer or a new booking instruction",
  "type": "object",
  "properties": {
    "identityId": {
      "$ref": "./aws-units.json#/definitions/identityId"
    },
    "bookingId": {
      "$ref": "./units.json#/definitions/uuid"
    },
    "ref": {
      "type": "integer",
      "minValue": 0
    },
    "product": {
      "$ref": "#/definitions/product"
    },
    "fare": {
      "$ref": "./units.json#/definitions/fare"
    },
    "fares": {
      "type": "array",
      "items": {
        "$ref": "./units.json#/definitions/fare"
      }
    },
    "terms": {
      "ref": "./booking.json#/definitions/terms"
    },
    "meta": {
      "$ref": "./booking.json#/definitions/meta"
    }
  },
  "required": [
    "identityId",
    "ref",
    "product",
    "terms",
    "meta"
  ],
  "additionalProperties": false,
  "definitions": {
    "product": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "priority": {
          "type": "number"
        },
        "agencyId": {
          "$ref": "plan.json#/definitions/agencyId"
        },
        "tspProductId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "icon": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "id",
        "name",
        "priority",
        "agencyId",
        "tspProductId",
        "description",
        "icon"
      ]
    }
  }
}
