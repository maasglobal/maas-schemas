{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/profile",
  "description": "MaaS user profiles as saved on DynamoDB",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minValue": 0
    },
    "identityId": {
      "$ref": "./aws-units.json#/definitions/identityId"
    },
    "phone": {
      "$ref": "./customer.json#/definitions/phone"
    },
    "email": {
      "$ref": "./customer.json#/definitions/email"
    },
    "firstName": {
      "$ref": "./customer.json#/definitions/firstName"
    },
    "lastName": {
      "$ref": "./customer.json#/definitions/lastName"
    },
    "city": {
      "$ref": "./address.json#/definitions/city"
    },
    "country": {
      "$ref": "./address.json#/definitions/country"
    },
    "zipCode": {
      "$ref": "./address.json#/definitions/zipCode"
    },
    "profileImageUrl": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "favoriteLocations": {
      "type": "array",
      "items": {
        "$ref": "./units.json#/definitions/place"
      }
    },
    "balance": {
      "type": "integer"
    },
    "paymentMethod": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["unknown", "card", "stripe"]
        },
        "valid": {
          "description": "Whether the payment method is valid and working",
          "type": "boolean"
        },
        "maskedNumber": {
          "description": "Typically the credit card number with all but the last four digits obfuscated",
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "issuer": {
          "description": "The card issuer, e.g. 'Visa'",
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "expiry": {
          "description": "When this payment method expires",
          "$ref": "./units.json#/definitions/time"
        }
      },
      "required": ["type", "valid"]
    },
    "subscription": {
      "type": "object",
      "description": "TODO Delete this legacy version of subscription (replaced by subscriptionInstance)"
    },
    "subscriptionInstance": {
      "$ref": "#/definitions/subscriptionInstance"
    },
    "created": {
      "$ref": "./units.json#/definitions/time"
    },
    "modified": {
      "$ref": "./units.json#/definitions/time"
    }
  },
  "additionalProperties": false,
  "required": [ "identityId", "phone", "favoriteLocations",  "balance", "paymentMethod", "subscriptionInstance" ],
  "definitions": {
    "subscriptionInstance": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "minValue": 0
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "plan": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 255
            }
          },
          "required": [ "id" ],
          "additionalProperties": false
        },
        "addons": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          }
        },
        "coupons": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          }
        },
        "wmpGrant": {
          "type": "integer",
          "minValue": 0
        },
        "level": {
          "type": "integer",
          "minValue": 0
        },
        "active": {
          "type": "boolean"
        }
      },
      "required": ["plan", "addons", "coupons"]
    }
  }
}
