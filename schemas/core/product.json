{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/product",
  "description": "Product in core which encapsulates at least an id, name and a tspProductId",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "icon": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "priority": {
      "type": "integer",
      "minimum": 0
    },
    "agencyId": {
      "$ref": "plan.json#/definitions/agencyId"
    },
    "tspProductId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    }
  },
  "required": [
    "id",
    "tspProductId",
    "name"
  ],
  "additionalProperties": false
}
