{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/core/itinerary",
  "description": "Product option for an itinerary, is either an existing booking pointer or a new booking instruction",
  "type": "object",
  "properties": {
    "identityId": {
      "type": "string",
      "pattern": "^[aepsu]{2}\\-[0-9A-Z_a-z]{4}\\-[0-9]:[0-9a-f]{8}(\\-[0-9a-f]{4}){3}\\-[0-9a-f]{12}$"
    },
    "bookingId": {
      "description": "Universally unique identifier, see https://en.wikipedia.org/wiki/Universally_unique_identifier",
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{8}(\\-[0-9A-Fa-f]{4}){3}\\-[0-9A-Fa-f]{12}$"
    },
    "ref": {
      "type": "integer",
      "minValue": 0
    },
    "product": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "priority": {
          "type": "number"
        },
        "agencyId": {
          "type": "string",
          "minLength": 2,
          "maxLength": 64
        },
        "tspProductId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "id",
        "name",
        "priority",
        "agencyId",
        "tspProductId"
      ]
    },
    "fare": {
      "description": "A fare/price as billed from the user in WMPs",
      "type": "object",
      "properties": {
        "amount": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "null"
            }
          ]
        },
        "currency": {
          "type": "string",
          "enum": [
            "WMP"
          ]
        }
      },
      "required": [
        "amount",
        "currency"
      ],
      "additionalProperties": false
    },
    "terms": {
      "type": "object"
    }
  },
  "required": [
    "identityId",
    "ref",
    "product",
    "fare",
    "terms"
  ],
  "additionalProperties": false,
  "definitions": {
    "product": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "priority": {
          "type": "number"
        },
        "agencyId": {
          "type": "string",
          "minLength": 2,
          "maxLength": 64
        },
        "tspProductId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "id",
        "name",
        "priority",
        "agencyId",
        "tspProductId"
      ]
    }
  }
}