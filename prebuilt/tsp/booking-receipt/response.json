{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/tsp/booking-receipt/response",
  "description": "Response schema for getting a receipt for specific booking",
  "properties": {
    "tspId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "cost": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "description": "Price billled to MaaS by TSP",
      "type": "object",
      "properties": {
        "amount": {
          "anyOf": [
            {
              "type": "number",
              "minimum": 0,
              "multipleOf": 0.01
            },
            {
              "type": "null"
            }
          ]
        },
        "discount": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        "taxes": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        "currency": {
          "anyOf": [
            {
              "description": "Accepted monetary unit in ISO 4127 format, see https://en.wikipedia.org/wiki/ISO_4217#cite_note-1",
              "type": "string",
              "enum": [
                "EUR",
                "GBP"
              ]
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "amount",
        "currency"
      ],
      "additionalProperties": false
    },
    "receipt": {
      "type": "object",
      "description": "Receipt as received from TSP, could be stored for future reference."
    }
  },
  "required": [
    "tspId",
    "cost"
  ],
  "additionalProperties": false
}