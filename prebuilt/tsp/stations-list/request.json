{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "MaaS stations query request schema",
  "type": "object",
  "properties": {
    "location": {
      "description": "Geographic latitude-longitude number-pair as a string in WGS-84 system, see https://en.wikipedia.org/wiki/World_Geodetic_System",
      "type": "string",
      "pattern": "^[\\+\\x2D]?[0-9]{1,3}(\\.[0-9]+)?,[\\+\\x2D]?[0-9]{1,3}(\\.[0-9]+)?$",
      "minLength": 1,
      "maxLength": 64
    },
    "radius": {
      "description": "Distance in meters",
      "type": "number",
      "minimum": 0,
      "maximum": 40075000,
      "multipleOf": 1
    },
    "limit": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "location"
  ],
  "additionalProperties": false
}