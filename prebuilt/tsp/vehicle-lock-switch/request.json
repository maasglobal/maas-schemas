{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/tsp/vehicle-lock-switch/request",
  "description": "Request schema for applying vehicle lock/unlock action to a TSP ID from a TSP adapter",
  "type": "object",
  "properties": {
    "tspId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "action": {
      "description": "An action to be pursued",
      "type": "string",
      "enum": [
        "LOCK",
        "UNLOCK"
      ]
    }
  },
  "required": [
    "tspId",
    "action"
  ],
  "additionalProperties": false
}
