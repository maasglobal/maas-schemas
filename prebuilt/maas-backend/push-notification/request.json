{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "MaaS push notification request schema.",
  "type": "object",
  "properties": {
    "identityId": {
      "type": "string",
      "pattern": "^[aepsu]{2}\\x2D[0-9A-Z_a-z]{4}\\x2D[0-9]:[0-9a-f]{8}(\\x2D[0-9a-f]{4}){3}\\x2D[0-9a-f]{12}$"
    },
    "message": {
      "type": "string",
      "minLength": 2,
      "maxLength": 256
    },
    "badge": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9999
    },
    "sound": {
      "type": "string",
      "minLength": 2,
      "maxLength": 256
    },
    "severity": {
      "enum": [
        "Alert",
        "Warning",
        "Information"
      ]
    },
    "type": {
      "enum": [
        "ObjectChange",
        "TripActivate",
        "InfoMessage"
      ]
    },
    "data": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "objectType": {
              "enum": [
                "Itinerary",
                "Booking"
              ]
            },
            "ids": {
              "type": "array",
              "minItems": 1,
              "maxItems": 99,
              "items": {
                "description": "Universally unique identifier, see https://en.wikipedia.org/wiki/Universally_unique_identifier",
                "type": "string",
                "pattern": "^[0-9A-Fa-f]{8}(\\x2D[0-9A-Fa-f]{4}){3}\\x2D[0-9A-Fa-f]{12}$"
              }
            }
          },
          "required": [
            "objectType",
            "ids"
          ],
          "additionalProperties": false
        },
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "objectType": {
              "enum": [
                "Profile"
              ]
            },
            "ids": {
              "type": "array",
              "minItems": 1,
              "maxItems": 1,
              "items": {
                "type": "string",
                "pattern": "^[aepsu]{2}\\x2D[0-9A-Z_a-z]{4}\\x2D[0-9]:[0-9a-f]{8}(\\x2D[0-9a-f]{4}){3}\\x2D[0-9a-f]{12}$"
              }
            }
          },
          "required": [
            "objectType",
            "ids"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "identityId",
    "severity",
    "badge",
    "type"
  ],
  "additionalProperties": false
}