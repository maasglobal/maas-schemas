{
  "$id": "http://maasglobal.com/core/plan.json",
  "description": "OpenTripPlanner compatible format for plans, extended with id for legs and itineraries",
  "oneOf": [{ "$ref": "#/definitions/plan1" }, { "$ref": "#/definitions/plan2" }],
  "definitions": {
    "planProgress": {
      "type": "string",
      "enum": ["IN_PROGRESS", "FINISHED", "FAILED"]
    },
    "plan1": {
      "type": "object",
      "properties": {
        "from": {
          "$ref": "http://maasglobal.com/core/components/place.json"
        },
        "planId": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/uuid"
        },
        "requestId": {
          "$ref": "http://maasglobal.com/core/components/common.json#/definitions/requestId"
        },
        "progress": {
          "$ref": "#/definitions/planProgress"
        },
        "outwards": {
          "$ref": "#/definitions/itineraries"
        },
        "returns": {
          "$ref": "#/definitions/itineraries"
        }
      },
      "required": ["from", "planId", "outwards", "returns"]
    },
    "plan2": {
      "type": "object",
      "properties": {
        "from": {
          "$ref": "http://maasglobal.com/core/components/place.json"
        },
        "planId": {
          "$ref": "http://maasglobal.com/core/components/units.json#/definitions/uuid"
        },
        "itineraries": {
          "$ref": "#/definitions/itineraries"
        }
      },
      "required": ["from", "planId", "itineraries"]
    },
    "itineraries": {
      "type": "array",
      "items": {
        "$ref": "http://maasglobal.com/core/itinerary.json"
      }
    }
  }
}
