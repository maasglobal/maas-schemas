{
  "$id": "http://maasglobal.com/core/paymentSource.json",
  "description": "MaaS region schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "customerId": {
      "$ref": "http://maasglobal.com/core/components/units.json#/definitions/identityId"
    },
    "type": {
      "type": "string",
      "enum": [
        "card",
        "paypal_express_checkout",
        "amazon_payments",
        "direct_debit",
        "generic",
        "alipay",
        "unionpay",
        "apple_pay"
      ]
    },
    "gateway": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "gatewayId": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "temporaryToken": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "status": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "valid": {
      "type": "boolean"
    },
    "card": {
      "$ref": "http://maasglobal.com/core/card.json"
    }
  },
  "required": ["customerId", "type"],
  "additionalProperties": false
}
