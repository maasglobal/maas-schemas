      "examples": ["CX"]
    },
    "documentStatus": {
      "type": "string",
      "enum": ["PENDING", "APPROVED", "DECLINED", "EXPIRED", "RESUBMISSION_REQUESTED", "ABANDONED"],
      "examples": ["APPROVED"]
    },
    "documentStatusPENDING": {
      "default": "PENDING",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "PENDING" }]
    },
    "documentStatusAPPROVED": {
      "default": "APPROVED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "APPROVED" }]
    },
    "documentStatusDECLINED": {
      "default": "DECLINED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "DECLINED" }]
    },
    "documentStatusEXPIRED": {
      "default": "EXPIRED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "EXPIRED" }]
    },
    "documentStatusRESUBMISSION_REQUESTED": {
      "default": "RESUBMISSION_REQUESTED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "RESUBMISSION_REQUESTED" }]
    },
    "documentStatusABANDONED": {
      "default": "ABANDONED",
      "allOf": [{ "$ref": "#/definitions/documentStatus" }, { "const": "ABANDONED" }]
    },
    "validFrom": {
      "allOf": [{ "$ref": "http://maasglobal.com/core/components/units.json#/definitions/isoDate" }],
      "examples": ["2020-01-01"]
    },
    "validTo": {
      "allOf": [{ "$ref": "http://maasglobal.com/core/components/units.json#/definitions/isoDate" }],
      "examples": ["2030-12-31"]
    },
    "category": {
      "type": "string",
      "examples": ["normal"]
    },
    "details": {
      "type": "object",
      "properties": {
        "category": { "$ref": "#/definitions/category" }
      },
      "examples": [{ "category": "normal" }]
    },
    "mediaItemContent": {
      "type": "string"
    },
    "mediaItemContext": {
      "type": "string"
    },
    "mediaItem": {
      "type": "object",
      "properties": {
        "content": { "$ref": "#/definitions/mediaItemContent" },
        "context": { "$ref": "#/definitions/mediaItemContext" }
      },
      "additionalProperties": false,
      "required": ["content", "context"]
    },
    "media": {
      "description": "Media documents related to user personal document.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/mediaItem"
      }
    },
    "kycServiceId": {
      "description": "Id of kyc service used",
      "type": "string",
      "minLength": 2
    },
    "firstName": {
      "allOf": [{ "$ref": "http://maasglobal.com/core/components/common.json#/definitions/personalName" }],
      "examples": ["Tea"]
    },
    "lastName": {
      "allOf": [{ "$ref": "http://maasglobal.com/core/components/common.json#/definitions/personalName" }],
      "examples": ["Snowman"]
    },
    "partyId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "partyType": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    }
  },
  "properties": {
    "id": { "$ref": "#/definitions/documentId" },
