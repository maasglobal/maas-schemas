    },
    "validTo": {
      "$ref": "#/definitions/validTo"
    },
    "details": {
      "$ref": "#/definitions/details"
    },
    "media": {
      "$ref": "#/definitions/media"
    },
    "kycServiceId": {
      "$ref": "#/definitions/kycServiceId"
    },
    "firstName": {
      "oneOf": [
        {
          "$ref": "#/definitions/firstName"
        },
        {
          "type": "null"
        }
      ]
    },
    "lastName": {
      "oneOf": [
        {
          "$ref": "#/definitions/lastName"
        },
        {
          "type": "null"
        }
      ]
    }
