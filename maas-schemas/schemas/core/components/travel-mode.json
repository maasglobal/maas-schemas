      "default": "WALK",
      "allOf": [{ "$ref": "#/definitions/personalMode" }, { "const": "WALK" }]
    },
    "personalModeSHARED_E_BICYCLE": {
      "default": "SHARED_E_BICYCLE",
      "allOf": [{ "$ref": "#/definitions/personalMode" }, { "const": "SHARED_E_BICYCLE" }]
