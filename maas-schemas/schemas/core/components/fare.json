{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.maas.global/core/components/fare.json",
  "description": "A fare/price as billed to the user in WMPs or in tokens",
  "type": "object",
  "definitions": {
    "tokenId": {
      "type": "string",
      "pattern": "^[a-z]+(-[a-z0-9_]+)+$"
    },
    "fareType": {
      "type": "string",
      "enum": ["charge", "refund"]
    },
    "fareTypeCHARGE": {
      "default": "charge",
      "allOf": [{ "$ref": "#/definitions/fareType" }, { "const": "charge" }]
    },
    "fareTypeREFUND": {
      "default": "refund",
      "allOf": [{ "$ref": "#/definitions/fareType" }, { "const": "refund" }]
    }
  },
  "properties": {
    "amount": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "currency": {
      "oneOf": [
        {
          "$ref": "https://schemas.maas.global/core/components/units.json#/definitions/currency"
        },
        {
          "$ref": "https://schemas.maas.global/core/components/common.json#/definitions/metaCurrency"
        },
        { "$ref": "#/definitions/tokenId" }
      ]
    },
    "tokenId": {
      "$ref": "#/definitions/tokenId"
    },
    "hidden": {
      "description": "Whether clients should hide this fare for customer in payment view and profile view",
      "type": "boolean"
    },
    "originalAmount": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "productionAmount": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "type": { "$ref": "#/definitions/fareType" }
  },
  "required": ["amount", "currency"],
  "additionalProperties": false,
  "examples": [
    {
      "type": "charge",
      "amount": 1200,
      "currency": "EUR",
      "productionAmount": 1234
    },
    {
      "type": "refund",
      "amount": 1200,
      "currency": "EUR",
      "productionAmount": 1234
    },
    {
      "type": "charge",
      "amount": 1200,
      "currency": "WMP",
      "productionAmount": 1234
    },
    {
      "type": "refund",
      "amount": 1200,
      "currency": "WMP",
      "productionAmount": 1234
    },
    {
      "type": "charge",
      "amount": 12,
      "currency": "TOKEN",
      "tokenId": "fi-package-benefit"
    },
    {
      "type": "refund",
      "amount": 12,
      "currency": "TOKEN",
      "tokenId": "fi-package-benefit"
    },
    {
      "type": "charge",
      "amount": 12,
      "currency": "fi-package-benefit",
      "tokenId": "fi-package-benefit"
    },
    {
      "type": "refund",
      "amount": 12,
      "currency": "fi-package-benefit",
      "tokenId": "fi-package-benefit"
    }
  ]
}
