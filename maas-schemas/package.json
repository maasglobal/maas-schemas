  },
  "homepage": "https://github.com/maasglobal/maas-schemas/",
  "dependencies": {},
  "devDependencies": {
    "@adobe/jsonschema2md": "^3.3.1",
    "@cloudflare/json-schema-walker": "^0.1.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.47.0",
    "@typescript-eslint/parser": "^5.36.1",
    "chai": "^4.2.0",
    "doctest-ts": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-maasglobal-ts": "^0.0.14",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fp-ts": "^2.13.1",
    "gh-pages": "^2.1.1",
    "git-list-updated": "^1.1.2",
    "glob": "^7.1.3",
    "io-ts": "^2.2.20",
    "io-ts-types": "^0.5.19",
    "io-ts-validator": "^0.0.7",
    "jest": "^26.0.1",
    "jest-extended": "^0.11.5",
    "json-schema": "^0.3.0",
    "maasglobal-json-schema-validator": "^0.0.8",
    "maasglobal-prelude-ts": "^0.0.13",
    "maasglobal-schema-generator-ajv": "^0.0.5",
    "maasglobal-schema-generator-io-ts": "^0.0.6",
    "markdown-folder-to-html": "^2.3.0",
    "prettier": "^2.8.1",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "generate-tests": "doctest-ts --jest `find src -name '*.ts'`",
    "test": "yarn generate-tests && jest --no-cache",
    "clean": "rm -rf lib",
    "clean-ajv-src": "rm -rf src/ajv",
    "prettify-ajv": "(yarn eslint --fix 'src/ajv/**/*.ts'||true) && yarn prettier --write 'src/ajv/**/*.ts'",
    "convert-ajv": "yarn clean-ajv-src && yarn mgsg-ajv --packageRoot . && yarn prettify-ajv",
    "clean-io-ts-types": "rm -rf src/io-ts/_types",
    "clean-io-ts-interfaces": "find src/io-ts -mindepth 1 -maxdepth 1 -not -name _types -not -name _utils -not -name _private|xargs rm -rf",
    "clean-io-ts-src": "yarn clean-io-ts-types && yarn clean-io-ts-interfaces",
    "prettify-io-ts": "(yarn eslint --fix 'src/io-ts/**/*.ts'||true) && yarn prettier --write 'src/io-ts/**/*.ts'",
    "convert-io-ts": "yarn clean-io-ts-src && yarn mgsg-io-ts --packageRoot . && yarn prettify-io-ts",
    "convert-all": "yarn convert-ajv && yarn convert-io-ts",
    "build": "yarn clean && tsc",
    "typecheck": "tsc -p src/tsconfig.json",
    "eslint": "eslint --max-warnings=0 '**/*.{ts,js}'",
    "eslint-fix": "yarn eslint --fix||true",
    "prettier-check": "yarn prettier --check '**/*.{css,html,js,ts,json,md,yaml,yml}'",
    "prettier-fix": "yarn prettier-check --write",
    "prettify": "yarn eslint-fix && yarn prettier-fix",
    "lint": "yarn eslint && yarn prettier-check",
    "complain": "echo 'Please run \"yarn convert-all\"' && false",
    "check-conversion": "git diff --exit-code HEAD src || yarn complain",
    "verify-conversion": "yarn check-conversion && yarn convert-all && yarn check-conversion",
    "ci": "yarn verify-conversion && yarn typecheck && yarn test && yarn lint && yarn build",
    "docs": "rm -Rf docs && node ./utils/make-docs.js && markdown-folder-to-html && mv _docs docs/html && cp docs/html/README.html docs/html/index.html",
    "gh-pages": "gh-pages -d docs",
    "deploy-npm": "yarn ci && yarn publish --non-interactive",
    "deploy-alpha": "yarn deploy-npm --tag alpha"
  }
}
