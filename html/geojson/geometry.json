                    "$linkVal": "position",
                    "$linkPath": "geometry.md"
                }
            }
        },
        {
            "title": "MultiPoint",
            "properties": {
                "type": {
                    "enum": [
                        "MultiPoint"
                    ]
                },
                "coordinates": {
                    "$ref": "#/definitions/positionArray",
                    "$linkVal": "positionArray",
                    "$linkPath": "geometry.md"
                }
            }
        },
        {
            "title": "LineString",
            "properties": {
                "type": {
                    "enum": [
                        "LineString"
                    ]
                },
                "coordinates": {
                    "$ref": "#/definitions/lineString",
                    "$linkVal": "lineString",
                    "$linkPath": "geometry.md"
                }
            }
        },
        {
            "title": "MultiLineString",
            "properties": {
                "type": {
                    "enum": [
                        "MultiLineString"
                    ]
                },
                "coordinates": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/lineString",
                        "$linkVal": "lineString",
                        "$linkPath": "geometry.md"
                    }
                }
            }
        },
        {
            "title": "Polygon",
            "properties": {
                "type": {
                    "enum": [
                        "Polygon"
                    ]
                },
                "coordinates": {
                    "$ref": "#/definitions/polygon",
                    "$linkVal": "polygon",
                    "$linkPath": "geometry.md"
                }
            }
        },
        {
            "title": "MultiPolygon",
            "properties": {
                "type": {
                    "enum": [
                        "MultiPolygon"
                    ]
                },
                "coordinates": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/polygon",
                        "$linkVal": "polygon",
                        "$linkPath": "geometry.md"
                    }
                }
            }
        }
    ],
    "definitions": {
        "position": {
            "description": "A single position",
            "type": "array",
            "minItems": 2,
            "items": [
                {
                    "type": "number"
                },
                {
                    "type": "number"
                }
            ],
            "additionalItems": false
        },
        "positionArray": {
            "description": "An array of positions",
            "type": "array",
            "items": {
                "$ref": "#/definitions/position",
                "$linkVal": "position",
                "$linkPath": "geometry.md"
            }
        },
        "lineString": {
            "description": "An array of two or more positions",
            "allOf": [
                {
                    "$ref": "#/definitions/positionArray",
                    "$linkVal": "positionArray",
                    "$linkPath": "geometry.md"
                },
                {
                    "minItems": 2
                }
            ]
        },
        "linearRing": {
            "description": "An array of four positions where the first equals the last",
            "allOf": [
                {
                    "$ref": "#/definitions/positionArray",
                    "$linkVal": "positionArray",
                    "$linkPath": "geometry.md"
                },
                {
                    "minItems": 4
                }
            ]
        },
        "polygon": {
            "description": "An array of linear rings",
            "type": "array",
            "items": {
                "$ref": "#/definitions/linearRing",
                "$linkVal": "linearRing",
                "$linkPath": "geometry.md"
            }
        }
    },
    "meta:status": "Develop"
